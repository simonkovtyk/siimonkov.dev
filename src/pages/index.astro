---
import Root from "../layouts/Root.astro";
import Icon from "../components/Icon.astro";
import Button from "../components/Button.astro";
---
<Root title="test">
<main class="w-full flex flex-col items-center mt-[max(2rem,5vw)] px-8">
  <div class="max-w-[1000px]">
    <section class="flex flex-col items-start justify-start">
      <img alt="Picture of Simon Kovtyk" class="bg-zinc-700 w-72 rounded-3xl mb-12" src="/profile.webp" />
      <h1 class="text-4xl font-semibold text-zinc-300 mb-4">Simon Kovtyk</h1>
      <p class="text-2xl font-regular text-zinc-400">Software-Developer passionated in CI/CD, Architecture and Dev-Environments</p>
      <div class="flex items-center gap-4 mt-8">
        <Button type="link" link="https://github.com/simonkovtyk" target="_blank">
          <Icon name="github" width={24} height={24} />
        </Button>
        <Button type="link" link="https://www.npmjs.com/~simonkov" target="_blank">
          <Icon name="npm" width={24} height={24} />
        </Button>
        <Button type="link" link="https://x.com/simonkovtyk" target="_blank">
          <Icon name="twitter-x" width={24} height={24} />
        </Button>
        <div class="w-24 h-[1px] bg-zinc-600 rounded-full"></div>
        <a class="text-zinc-400 text-xl hover:text-zinc-500 transition-colors" href="mailto:simon@kovtyk.com">simon@kovtyk.com</a>
      </div>
    </section>
    <section class="flex flex-col items-start justify-start mt-24">
      <div class="flex gap-4 items-center mb-4">
        <h2 class="text-2xl font-semibold text-zinc-300">Public PGP Key</h2>
        <Button type="button" className="pgp-copy-button">
          <Icon name="copy" width={24} height={24} />
        </Button>
      </div>
      <textarea class="text-sm text-zinc-400 border border-zinc-700 p-4 rounded-xl text-wrap break-all select-text pgp-copy-text">
        -----BEGIN PGP PUBLIC KEY BLOCK-----<br/>
        <br/>
        <br/>
        -----END PGP PUBLIC KEY BLOCK-----
      </textarea>
    </section>
  </div>
</main>
</Root>
<script>
  const copyPGPButton: HTMLButtonElement | null = document.querySelector(".pgp-copy-button");
  const copyPGPText: HTMLParagraphElement | null = document.querySelector(".pgp-copy-text");

  const handleFallbackCopy = (): void => {
    copyPGPText.select();
    document.execCommand("copy");
  }

  copyPGPButton?.addEventListener("click", async (): Promise<void> => {
    if ("clipboard" in navigator) {
      let clipboardPermissions: PermissionStatus | undefined;

      try {
        clipboardPermissions = await navigator.permissions.query({ name: "clipboard-write" });
      } catch {

      }

      if (clipboardPermissions?.state === "denied")
        return;

      if (copyPGPText === null)
        return;

      navigator.clipboard.writeText(copyPGPText.innerText);
      return;
    }


  });
</script>

